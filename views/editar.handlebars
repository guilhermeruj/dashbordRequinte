<div class="content-wrapper">
  <div class="page-header">
    <h3 class="page-title"> Editar agendamentos </h3>
  </div>
  <div class="row">
    <div class="col-md-6 grid-margin stretch-card">
      <div class="card">
        <div class="card-body">
          <h4 class="card-title">Dados do Cliente</h4>
          <form
            class="forms-sample"
            action="/agendamentos/insertangd"
            method="post"
          >
            <div class="form-group">
              <label for="cod">N° de Contrato</label>
              <input
                type="number"
                class="form-control"
                name="contrato"
                id="cod"
                value="{{pesquisa.contrato}}"
              />
            </div>
            <div class="form-group">
              <label for="exampleInputUsername1">Nome do cliente:</label>
              <input
                type="text"
                class="form-control"
                name="cliente"
                id="exampleInputUsername1"
                value="{{pesquisa.cliente}}"
              />
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">N° de Telefone</label>
              <input
                type="text"
                name="telefone"
                class="form-control"
                id="exampleInputEmail1"
                value="{{pesquisa.telefone}}"
              />
              <p class="card-description">
                Mantenha o padrão (34) 9 00000000
              </p><hr />
            </div>
            <div class="form-group">
              <label class="tipo">Tipo de agendamento</label>
              <select name="tipo" id="tipo" class="form-control">
                <option value="{{pesquisa.tipo}}">{{pesquisa.tipo}}</option>
                <option value="Retirada masculino">Retirada masculino</option>
                <option value="Retirada feminino">Retirada feminino </option>
                <option value="Prova masculina">Prova masculina </option>
                <option value="Prova feminino ">Prova feminino </option>
                <option value="Devolução masculino">Devolução masculino
                </option>
                <option value="Devolução feminino">Devolução feminino</option>
              </select>
            </div>
            <div class="form-group">
              <label for="situacao">Status</label>
              <select class="form-control" name="situacao" id="situacao">
                <option
                  value="{{pesquisa.situacao}}"
                >{{pesquisa.situacao}}</option>
                <option value="Aberto">Aberto</option>
                <option value="Concluido">Concluido</option>
              </select>
            </div>
            <hr />
            <div class="form-group">
              <label for="dataAgd">Data do agendamento:</label>
              <input
                type="date"
                class="form-control"
                name="dataAgd"
                id="dataAgd"
                value="{{pesquisa.dataAgd}}"
              />
            </div>
            <div class="form-group">
              <label for="hora">Horário do agendamento:</label>
              <input
                type="time"
                class="form-control"
                name="hora"
                id="hora"
                value="{{pesquisa.hora}}"
              />
            </div>
            <div class="form-group">
              <label for="dataAgd">Quantos dias de antecedência</label>
              <input
                type="number"
                class="form-control"
                name="antecedencia"
                id="antecedencia"
                value="{{pesquisa.antecedencia}}"
              />
            </div>
            <button
              type="submit"
              class="btn btn-primary mr-2"
            >Cadastrar</button>
            <button class="btn btn-dark">Cancelar</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>